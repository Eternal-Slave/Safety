{
    "tsc-alias": {
        "resolveFullPaths": true
    },
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "outDir": "build",
        "target": "ES2022",
        "module": "ES2022",
        "skipLibCheck": true,
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "paths": { "@/*": ["./*"] }
    },
    "exclude": ["build"]
}
